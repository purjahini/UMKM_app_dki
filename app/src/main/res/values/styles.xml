<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>
    </style>
    <style name="customOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColor">@color/dialog_choose_text_color</item>
    </style>

    <style name="DialogPhoto" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/gradient</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

        <!--        Radio button unchecked-->
        <item name="android:colorControlNormal">@color/white</item>
        <!--        Radio button checked-->
        <item name="android:colorControlActivated">@color/white</item>
        <!--        List item on click highlight color-->
        <item name="android:colorControlHighlight">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
    </style>

</resources>