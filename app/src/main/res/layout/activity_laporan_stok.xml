<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    tools:context=".Activities.LaporanStokActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar_with_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNamaToko"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Toko"/>
    <TextView
        android:id="@+id/tvAlamatToko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat Toko"
        android:layout_marginLeft="@dimen/_20sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textAlignment="textEnd"
        android:textSize="@dimen/_12sdp"
        android:text="   Pilih Kategori Produk :" />

    <Spinner
        android:id="@+id/spnKategoriProduk"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/TvTanggalCetak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="Date Print : 2022-04-02 18:20:00"/>



    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tllapstok"
        android:orientation="horizontal">

        <TableRow>
            <TextView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:text="NO" />

            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kategori"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Produk"
                android:textSize="@dimen/_12sdp" />



            <TextView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stok Akhir"
                android:textAlignment="center"
                android:textSize="@dimen/_12sdp" />



        </TableRow>

    </TableLayout>


    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum ada laporan stok!!!"
        android:typeface="serif"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:text="Export"
        android:id="@+id/btnExport"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_baseline_picture_as_pdf_24"
        android:drawablePadding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_height="wrap_content"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rclvPenjualan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvVersi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/abu_abu"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/app_name"

            />
    </RelativeLayout>

</LinearLayout>