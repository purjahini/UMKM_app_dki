<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include
        layout="@layout/layout_toolbar_with_back"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <!-- Filter Waktu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"


            android:background="@android:color/white">

            <TextView
                android:id="@+id/btn_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari ini"
                android:textSize="@dimen/_10sdp"
                android:background="@color/gray"
                android:padding="@dimen/_3sdp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/btn_yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kemarin"
                android:textSize="@dimen/_10sdp"
                android:background="@color/gray"
                android:padding="@dimen/_3sdp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/btn_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Minggu terakhir"
                android:textSize="@dimen/_10sdp"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="@dimen/_3sdp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/btn_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:text="1 Bulan terakhir"
                android:textSize="@dimen/_10sdp"
                android:background="@color/gray"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llchart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Total Keuangan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keuangan"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
               />

            <TextView
                android:id="@+id/tv_total_keuangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 50.000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"/>

            <!-- Bar Chart -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
               />


        </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <!-- Statistik Transaksi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
      android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Transaksi"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_total_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 10,000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaksi Pending"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_transaksi_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 5,000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Detail Transaksi -->
    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Transaksi"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hari ini"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_weight="5"
                android:id="@+id/tv_total_transaksi_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 50.000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

        </LinearLayout>



            <View
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/gray"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Pending"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hari ini"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_weight="5"
                android:id="@+id/tv_transaksi_pending_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 10.000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>




    </LinearLayout>
</LinearLayout>
