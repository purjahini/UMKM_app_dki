<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_2sdp"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp">
    <LinearLayout
        android:id="@+id/llTodaysDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_money"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/tvTotal"
            android:gravity="center_vertical"
            android:textColor="@color/primary"
           />

        <TextView
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_keranjang"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/tvTrx"
            android:gravity="center_vertical"
            android:textColor="@color/primary"
            />

        <LinearLayout
            android:id="@+id/lLdetail"
            android:weightSum="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="2"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/tvTanggal"
                android:gravity="center_vertical"
                android:textColor="@color/primary"
                />
            <TextView
                android:layout_weight="3"
                android:id="@+id/labelLapDetail"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/lap_detail_invoice"
                android:textAlignment="textEnd"
                android:textColor="@color/primary"
                />

            <TextView
                android:layout_weight="4"
                android:id="@+id/TvDetailInvoiceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/primary"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rclvLapTodaysDetailInvoice"
            android:visibility="gone"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
